local boards = require 'boards'
local manipulation = require 'boards.manipulation'

local input,dx,dy,output = ...
assert(dx:match('^([+-]?)([%d.]+)(%w*)$'), "invalid dx")
assert(dy:match('^([+-]?)([%d.]+)(%w*)$'), "invalid dy")
dx = boards.parse_distances(dx)
dy = boards.parse_distances(dy)

local data = assert(boards.load(input))

local copy = manipulation.offset_board(data, dx, dy)

boards.save(copy, output)

-- vi: ft=lua
